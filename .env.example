# iTori Platform Environment Configuration

# Server Configuration
PORT=3000
API_PORT=8000
NODE_ENV=development

# PDF Upload Configuration
UPLOAD_BUCKET=chopin
MAX_UPLOAD_SIZE=50000000

# Source Validator Configuration
SOURCE_VALIDATOR_MIN_SCORE=0.6
SOURCE_VALIDATOR_DOMAIN_WEIGHT=0.4
SOURCE_VALIDATOR_STRUCTURE_WEIGHT=0.3
SOURCE_VALIDATOR_CONTENT_WEIGHT=0.3

# Spectral Monitor Configuration
SPECTRAL_WS_ENDPOINT=ws://localhost:8000/ws
SPECTRAL_SYNC_INTERVAL=5.0
SPECTRAL_HISTORY_PATH=./spectral_history

# Stability Reasoning Configuration
STABILITY_COHERENCE_THRESH=0.65
STABILITY_PHASE_NOISE=0.1
STABILITY_THRESHOLD=0.4
STABILITY_COHERENCE_BREAK_THRESHOLD=0.2

# WebSocket Configuration
WS_PORT=8080
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30000

# Authentication
AUTH_SECRET=your-auth-secret-key
AUTH_EXPIRY=86400

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=itori

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=./logs
