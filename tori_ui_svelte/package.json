{
  "name": "tori-ui-svelte",
  "version": "1.0.0",
  "description": "TORI - Advanced Memory System Interface with Light Theme",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "css:build": "tailwindcss -i ./src/app.css -o ./static/app.css --watch",
    "css:diagnostic": "node css-diagnostic.js",
    "tori:start": "npm run dev",
    "tori:build": "npm run build && npm run preview"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@sveltejs/adapter-node": "^2.0.0",
    "clsx": "^2.1.0"
  },
  "keywords": [
    "tori",
    "memory-system",
    "ai-interface",
    "svelte",
    "tailwind",
    "light-theme"
  ],
  "repository": {
    "type": "git",
    "url": "local"
  },
  "author": "TORI Development Team",
  "license": "MIT"
}