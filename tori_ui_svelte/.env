# Environment Variables for TORI Production Deployment

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_FALLBACK_MODE=true
VITE_DEBUG=true

# TORI System Defaults
VITE_DEFAULT_COHERENCE=0.8
VITE_DEFAULT_ENTROPY=0.2
VITE_MAX_HISTORY=100

# Thoughtspace Settings
VITE_THOUGHTSPACE_ENABLED=true
VITE_MAX_NODES=50

# Ghost Persona Settings
VITE_GHOST_THRESHOLD=0.3
VITE_AUTO_GHOST_MORPH=true